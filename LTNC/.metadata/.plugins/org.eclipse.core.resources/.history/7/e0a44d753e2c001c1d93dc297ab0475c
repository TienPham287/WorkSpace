package Btapthem;

public class _16 {
	public static int getSn16(int n) {
		if (n == 0)
			return 0;

		return getSn16(n - 1) + n;
	}

	public static int getSn17(int n) {
		if (n == 0)
			return 0;

		return getSn17(n - 1) + n * n; 
	}

	public static int getSn18(int n) {
		if (n == 0)
			return 0;

		return getSn17(n - 1) + (1 / n );
	}

	public static double getSn19(int n) {
		if (n == 1)
			return 0.5;

		return getSn19(n-1) + (1/2*n);
	}

	public static void main(String[] args) {
		System.out.println(getSn16(3));
		System.out.println(getSn17(2));
		System.out.println(getSn18(2));
		System.out.println(getSn19(2));
	}
}
